					<button id="btnAddRoot" class="btn btn-primary" type="button" data-original-title="@SharedLocalizer["Control_Add"]" data-toggle="tooltip" data-widget="">
						<i class="fa fa-plus-square"></i>&nbsp;&nbsp;@SharedLocalizer["Control_Add"]
					</button>
					<button id="btnDelete" title="" class="btn btn-danger" type="button" data-original-title="@SharedLocalizer["Control_Delete"]" data-toggle="tooltip" data-widget="">
						<i class="fa fa-times"></i>&nbsp;&nbsp;@SharedLocalizer["Control_Delete"]
					</button>
				</div>
			</div>
			<div class="box-body">
				<div class="table-scrollable">
					<table class="table table-striped table-bordered table-hover dataTable no-footer" role="grid" aria-describedby="sample_2_info">
						<thead>
							<tr role="row">
								<th class="table-checkbox" style="width:40px;text-align:center;"><input id="checkAll" class="group-checkable" type="checkbox"></th>
								<th tabindex="0" aria-label="">
									@SharedLocalizer["Department_Name"]
								</th>
								<th tabindex="0" aria-label="">
									@SharedLocalizer["Department_Code"]
								</th>
								<th tabindex="0" aria-label="">
									@SharedLocalizer["Department_Admin"]
								</th>
								<th tabindex="0" aria-label="">
									@SharedLocalizer["Department_Phone"]
								</th>
								<th tabindex="0" aria-label="">
									@SharedLocalizer["Department_Description"]
								</th>
								<th tabindex="0" style="width: 330px;" aria-label="">
									@SharedLocalizer["Department_Operation"]
								</th>
							</tr>
						</thead>
						<tbody id="tableBody"></tbody>
					</table>
					<div class="paging-toolbar">
						<ul id="grid_paging_part"></ul>
					</div>
				</div>
			</div>
		</div>
	</div>
</div>

