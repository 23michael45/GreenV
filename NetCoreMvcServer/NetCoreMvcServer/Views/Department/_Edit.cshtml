@using Microsoft.Extensions.Localization;

@using NetCoreMvcServer;
@inject IStringLocalizer<SharedResource> SharedLocalizer
<div id="addRootModal" tabindex="-1" class="modal fade in" aria-hidden="true">
	<div class="modal-dialog">
		<div class="box box-info">
			<div class="box-header with-border">
				<h5 class="box-title" id="Title"></h5>
				<button class="close" aria-label="Close" type="button" data-dismiss="modal">
					<span aria-hidden="true">×</span>
				</button>
			</div>
			<form class="form-horizontal">
				<input type="hidden" id="Id" />
				<input type="hidden" id="ParentId" />
				<div class="box-body">
					<div class="form-group">
						<label class="col-sm-2 control-label" for="">@SharedLocalizer["Department_Name"]</label>
						<div class="col-sm-10">
							<input class="form-control" id="Name" type="text" placeholder="@SharedLocalizer["Department_Name"]">
						</div>
					</div>
					<div class="form-group">
						<label class="col-sm-2 control-label" for="inputPassword3">@SharedLocalizer["Department_Code"]</label>
						<div class="col-sm-10">
							<input class="form-control" id="Code" type="text" placeholder="@SharedLocalizer["Department_Code"]">
						</div>
					</div>
					<div class="form-group">
						<label class="col-sm-2 control-label" for="">@SharedLocalizer["Department_Admin"]</label>
						<div class="col-sm-10">
							<input class="form-control" id="Manager" type="text" placeholder="@SharedLocalizer["Department_Admin"]">
						</div>
					</div>
					<div class="form-group">
						<label class="col-sm-2 control-label" for="">@SharedLocalizer["Department_Phone"]</label>
						<div class="col-sm-10">
							<input class="form-control" id="ContactNumber" type="text" placeholder="@SharedLocalizer["Department_Phone"]">
						</div>
					</div>
					<div class="form-group">
						<label class="col-sm-2 control-label" for="">@SharedLocalizer["Department_Description"]</label>
						<div class="col-sm-10">
							<textarea id="Remarks" class="form-control" rows="3"></textarea>
						</div>
					</div>
				</div>
				<div class="box-footer">
					<div class="pull-right box-tools">
						<button id="btnSave" class="btn btn-primary" type="button">@SharedLocalizer["Control_Save"]</button>
						<button class="btn btn-default" type="button" data-dismiss="modal">@SharedLocalizer["Control_Cancel"]</button>
					</div>
				</div>
			</form>
		</div>
	</div>
</div>

