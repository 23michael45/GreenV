	<div class="col-md-12">
		<div class="box box-primary">
			<div class="box-header with-border">
				<h3 class="box-title">@SharedLocalizer["GroundTruth_Title"]</h3>
				<div class="form-group">
					<div class="input-group">
						<div class="input-group-addon">
							@SharedLocalizer["GroundTruth_TimeRange"]
							<i class="fa fa-clock-o"></i>
							<input type="text" id="reservationtime">
							@SharedLocalizer["GroundTruth_IP"]
							<i class="fa fa-laptop"></i>
							<input type="text" data-inputmask="'alias': 'ip'" data-mask="">
						</div>
						<div class="pull-right box-tools">
							<button id="btnQuery" class="btn btn-primary" type="button">
								@SharedLocalizer["GroundTruth_Query"]
							</button>
							<button id="btnExportData" class="btn btn-primary" type="button">
								@SharedLocalizer["GroundTruth_Export"]
							</button>
						</div>
					</div>

				</div>

			</div>
			<div class="box-body">
				<div class="table-scrollable">
					<table class="table table-striped table-bordered table-hover dataTable no-footer" role="grid" aria-describedby="sample_2_info">
						<thead>
							<tr role="row">
								<th tabindex="0" aria-label="">
									@SharedLocalizer["GroundTruth_IP"]
								</th>
								<th tabindex="0" aria-label="">
									@SharedLocalizer["GroundTruth_Time"]
								</th>
								<th tabindex="0" aria-label="">
									@SharedLocalizer["GroundTruth_LR"]
								</th>
								<th tabindex="0" style="width: 230px;" aria-label="">
									@SharedLocalizer["GroundTruth_Operation"]
								</th>

							</tr>
						</thead>
						<tbody id="tableBody"></tbody>
					</table>
					<div class="paging-toolbar">
						<ul id="grid_paging_part"></ul>
					</div>
				</div>
			</div>
		</div>
	</div>
</div>

<p id="editone" hidden>@SharedLocalizer["Control_Edit"] </p>
<p id="addone" hidden>@SharedLocalizer["Control_Add"] </p>
<p id="deleteone" hidden>@SharedLocalizer["Control_Delete"] </p>
<p id="checkone" hidden>@SharedLocalizer["Control_CheckOne"] </p>
<p id="updateone" hidden>@SharedLocalizer["Control_UpdateOne"] </p>
<p id="startone" hidden>@SharedLocalizer["Control_StartOne"] </p>
<p id="stopone" hidden>@SharedLocalizer["Control_StopOne"] </p>


<p id="deletewaring" hidden>@SharedLocalizer["Control_DeleteSelected_Warning"] </p>
<p id="deleteok" hidden>@SharedLocalizer["Control_Warning_OK"] </p>
<p id="deletecancel" hidden>@SharedLocalizer["Control_Warning_Cancel"] </p>
<p id="selecttodelete" hidden>@SharedLocalizer["Control_Delete_NoSelected"] </p>
<p id="deletefailed" hidden>@SharedLocalizer["Control_DeleteFailed_Warning"] </p>
@section scripts{
	<script src="~/Views/App_GroundTruthData/Index.js"></script>
}
