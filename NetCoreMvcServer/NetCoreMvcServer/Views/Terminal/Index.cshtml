	<div class="col-md-12">
		<div class="box box-primary">
			<div class="box-header with-border">
				<h3 class="box-title">@SharedLocalizer["Share_TerminalControl"]</h3>
				<div class="pull-right box-tools">
					<button id="btnAdd" class="btn btn-primary" type="button" data-original-title=@SharedLocalizer["Terminal_Add_Terminal"] data-toggle="tooltip" data-widget="">
						<i class="fa fa-plus-square"></i>&nbsp;&nbsp;@SharedLocalizer["Control_Add"]

					</button>
					<button id="btnDelete" title="" class="btn btn-danger" type="button" data-original-title=@SharedLocalizer["Terminal_Delete_Terminal"] data-toggle="tooltip" data-widget="">
						<i class="fa fa-times"></i>&nbsp;&nbsp;@SharedLocalizer["Control_Delete"]

					</button>
					<button id="btnCheckAll" title="" class="btn btn-primary" type="button" data-original-title=@SharedLocalizer["Control_CheckAll"] data-toggle="tooltip" data-widget="">
						@SharedLocalizer["Control_CheckAll"]

					</button>
				</div>
			</div>
			<div class="box-body">
				<div class="table-scrollable">
					<table class="table table-striped table-bordered table-hover dataTable no-footer" role="grid" aria-describedby="sample_2_info">
						<thead>
							<tr role="row">
								<th class="table-checkbox" style="width:40px;text-align:center;"><input id="checkAll" class="group-checkable" type="checkbox"></th>
								<th tabindex="0" aria-label="">
									@SharedLocalizer["Terminal_IP"]

								</th>
								<th tabindex="0" aria-label="">
									@SharedLocalizer["Terminal_Coord_X"]

								</th>
								<th tabindex="0" aria-label="">
									@SharedLocalizer["Terminal_Coord_Y"]

								</th>
								<th tabindex="0" aria-label="">
									@SharedLocalizer["Terminal_Desc"]

								</th>
								<th tabindex="0" style="width: 230px;" aria-label="">
									@SharedLocalizer["Control_Operation"]

								</th>
							</tr>
						</thead>
						<tbody id="tableBody"></tbody>
					</table>
					<div class="paging-toolbar">
						<ul id="grid_paging_part"></ul>
					</div>
				</div>
			</div>
		</div>
	</div>

	<div class="col-md-12">
		<div class="box box-primary">
			<div class="box-header with-border">
				<h3 class="box-title">@SharedLocalizer["Terminal_Connected_Terminals"]</h3>

				<div class="pull-right box-tools">
					@SharedLocalizer["Terminal_Rate"]
					<input type="text" id="rate_input">
					@SharedLocalizer["Terminal_Gain"]
					<input type="text" id="gain_input">
					<button id="btnUpdateSetupAll" title="" class="btn btn-primary" type="button" data-original-title=@SharedLocalizer["Control_UpdateAll"] data-toggle="tooltip" data-widget="">
						@SharedLocalizer["Control_UpdateAll"]
					</button>

					<button id="btnStartAll" class="btn btn-primary" type="button" data-original-title=@SharedLocalizer["Terminal_Add_Terminal"] data-toggle="tooltip" data-widget="">
						@SharedLocalizer["Control_StartAll"]
					</button>

					<button id="btnStopAll" title="" class="btn btn-primary" type="button" data-original-title=@SharedLocalizer["Terminal_Delete_Terminal"] data-toggle="tooltip" data-widget="">
						@SharedLocalizer["Control_StopAll"]
					</button>
				</div>
			</div>
			<div class="box-body">
				<div class="table-scrollable">
					<table class="table table-striped table-bordered table-hover dataTable no-footer" role="grid" aria-describedby="sample_2_info">
						<thead>
							<tr role="row">
								<th class="table-checkbox" style="width:40px;text-align:center;"><input id="checkAll" class="group-checkable" type="checkbox"></th>
								<th tabindex="0" aria-label="">
									@SharedLocalizer["Terminal_IP"]
								</th>
								<th tabindex="0" aria-label="">
									@SharedLocalizer["Terminal_Rate"]
								</th>
								<th tabindex="0" aria-label="">
									@SharedLocalizer["Terminal_Gain"]
								</th>
								<th tabindex="0" aria-label="">
									@SharedLocalizer["Control_Operation"]
								</th>
							</tr>
						</thead>
						<tbody id="tableconnectedBody"></tbody>
					</table>
					<div class="paging-toolbar">
						<ul id="grid_paging_part"></ul>
					</div>
				</div>
			</div>
		</div>
	</div>
</div>

<p id="editone" hidden>@SharedLocalizer["Control_Edit"] </p>
<p id="addone" hidden>@SharedLocalizer["Control_Add"] </p>
<p id="deleteone" hidden>@SharedLocalizer["Control_Delete"] </p>
<p id="checkone" hidden>@SharedLocalizer["Control_CheckOne"] </p>
<p id="updateone" hidden>@SharedLocalizer["Control_UpdateOne"] </p>
<p id="startone" hidden>@SharedLocalizer["Control_StartOne"] </p>
<p id="stopone" hidden>@SharedLocalizer["Control_StopOne"] </p>


<p id="deletewaring" hidden>@SharedLocalizer["Control_DeleteSelected_Warning"] </p>
<p id="deleteok" hidden>@SharedLocalizer["Control_Warning_OK"] </p>
<p id="deletecancel" hidden>@SharedLocalizer["Control_Warning_Cancel"] </p>
<p id="selecttodelete" hidden>@SharedLocalizer["Control_Delete_NoSelected"] </p>
<p id="deletefailed" hidden>@SharedLocalizer["Control_DeleteFailed_Warning"] </p>

@Html.Partial("_Edit")
@section scripts{
	<script src="~/Views/Terminal/Index.js"></script>
}
